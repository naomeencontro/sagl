</script>

<form name="status_tramitacao_administrativo_form" method="post" action="status_tramitacao_administrativo_salvar_proc">

<a id="ajuda" href="&dtml-portal_url;/ajuda/administrativo_status_tramitacao">Ajuda</a>

<h1 class="firstHeading"> Tabelas Auxiliares </h1> 

<table class="table" >
  <tr> 
    <td class="form-label">| <a href="index_html">Início</a> |</td>
   </tr>
</table>

<fieldset><legend>Status Tramitação Administrativo</legend>
  <input type="hidden" name="hdn_cod_status" value="<dtml-var cod_status missing>" />
       <table class="table" >
         <tr> 
          <td width="50%" class="form-element">Sigla <span class="campoObrigatorio"></span><br />
           <input type="text" class="form-control"  name="txt_sgl_status" value="<dtml-var sgl_status missing>" size="10" maxlength="10"
            onBlur="form.txt_sgl_status.value = form.txt_sgl_status.value.toUpperCase()" /></td>
          <td width="50%" class="form-text"><b>Indicador da Tramitação</b><br />
           <select class="form-control"  name="lst_ind_tramitacao"> 
              <dtml-in expr="['---', 'Fim', 'Retorno']">
                <option<dtml-if cod_status>
                         <dtml-if expr="_['sequence-item']=='Fim' and ind_fim_tramitacao">
                              selected
                         <dtml-elif expr="_['sequence-item']=='Retorno' and ind_retorno_tramitacao">
                              selected
                         </dtml-if>
                       </dtml-if>
                       value="<dtml-var expr="_['sequence-item']">" ><dtml-var "_['sequence-item']">
                </option>
              </dtml-in>
           </select></td>
        </tr>
        <tr> 
           <td colspan="2" class="form-element" height="35">Descrição <span class="campoObrigatorio"></span><br />
            <input type="text" class="form-control"  name="txt_des_status" value="<dtml-var des_status missing>" size="60" maxlength="60" /></td>
        </tr>
      </table>
  <center>
  <br /> 
  <input type="button" class="botao" name="btn_status_tramitacao_salvar" value="Salvar" onClick="campos_criticar(document.status_tramitacao_administrativo_form)" />
  <dtml-if cod_status>
    <input type="button" class="botao" name="btn_status_excluir" value="Excluir" onClick="status_tramitacao_excluir(document.status_tramitacao_form)" />
  </dtml-if>
  </center><br />
</fieldset>
</form>
<dtml-var standard_html_footer>

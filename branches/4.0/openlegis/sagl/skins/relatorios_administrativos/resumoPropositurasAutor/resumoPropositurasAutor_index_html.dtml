<script type="text/javascript">
function clear_form_elements(ele) {

    $(ele).find(':input').each(function() {
        switch(this.type) {
            case 'password':
            case 'select-multiple':
            case 'select-one':
            case 'hidden':
            case 'text':
            case 'textarea':
                $(this).val('');
                break;
            case 'checkbox':
            case 'radio':
                this.checked = false;
        }
    });

}
</script>

<a id="ajuda" href="&dtml-portal_url;/ajuda/relatorios#rel_autor">Ajuda</a>

<h1 class="firstHeading">Matérias por Autor</h1>

<dtml-if expr="not _.has_key('impressao') or (_.has_key('impressao') and not _.has_key('dt_apres') and not _.has_key('dt_apres2'))">
<form  id="hideprint" method="post" name="materia_autor_form" action="resumoPropositurasAutor_index_html">
 <fieldset>
  <dtml-if impressao>
    <input type="hidden" name="impressao" value="<dtml-var impressao>">
  </dtml-if>
    <div class="pf-element pf-full-width">
      <label for="txt_autor"><span >Autor</span></label>
       <div class="pf-group">
      <input class="form-control" id="txt_autor" type="text" name="txt_autor" value="<dtml-var hdn_txt_autor missing>" placeholder="Todos" null="" style="max-width: 224px; width: 60%;" maxlength="50" disabled onFocus="javascript:this.blur()" />
      <input type="hidden" name="hdn_txt_autor" value="<dtml-var hdn_txt_autor missing>" />
      <input type="hidden" name="hdn_cod_autor" value="<dtml-var hdn_cod_autor missing>" />
      <a href="autor_pesquisar_form?hdn_tipo_pesquisa=pesq_basica" class="botao-link popup" data-fancybox-type="iframe">Selecionar</a>
     </div>
    </div>

    <div class="pf-element pf-full-width">
      <label for="lst_tip_materia"><span >Tipo de matéria</span></label>
        <select class="form-control"  class="form-control" id="lst_tip_materia" name="lst_tip_materia" style="max-width: 224px; width: 100%;">
          <option value="0">Todos</option>
          <dtml-in expr="zsql.tipo_materia_legislativa_obter_zsql(ind_excluido=0)">
            <option 
             <dtml-if expr="_.has_key('lst_tip_materia') and _.int(tip_materia)==_.int(lst_tip_materia)">
              selected</dtml-if>
               value="<dtml-var tip_materia missing>">
              <dtml-var sgl_tipo_materia> - <dtml-var des_tipo_materia>
            </option>
          </dtml-in>
        </select>
    </div>
    <div class="pf-element pf-full-width">
      <label><span >Período de apresentação:</span></label>
       <div class="pf-group">
        <label for="dt_apres">
          <input class="form-control" type="text" id="dt_apres" name="dt_apres" maxlength=10 style="min-width: 94px; max-width: 94px; width: 20%;" 
            value="<dtml-var dt_apres missing>" onblur="formata_data(form.dt_apres)" />
        </label>
        <label for="dt_apres2">a
          <input class="form-control" type="text" id="dt_apres2" name="dt_apres2" maxlength="10" style="min-width: 94px; max-width: 94px; width: 20%;" 
           value="<dtml-var dt_apres2 missing>" onblur="formata_data(form.dt_apres2)" />
        </label>
        </div>
      </div>
    <div class="pf-element pf-full-width">
      <label><span >Modo de Exibição:</span></label>
       <div class="pf-group">
             <dtml-in expr="['Resumido', 'Detalhado']">
              <input type="radio" id="mod_exibicao" name="rad_mod_exibicao" value="<dtml-var expr="_['sequence-item'][0]">"
                <dtml-if expr="_.has_key('rad_mod_exibicao') and rad_mod_exibicao==_['sequence-item'][0]">
                   checked=1
                <dtml-elif expr="_['sequence-item']=='Resumido'">checked=1</dtml-if>>
              <label style="vertical-align: top;" for="rad_mod_exibicao"><dtml-var expr="_['sequence-item']"></label>
             </dtml-in>
       </div>
    </div>
      <div class="pf-element pf-buttons">
        <input class="pf-button btn botao" type="button" class="botao" name="button" value="Gerar relatório" onClick="campos_criticar()" />
        <input class="pf-button btn botao" type="button" name="btn_materia_limpar" value="Limpar campos" onclick="clear_form_elements('#hideprint')" >
      </div>
 </fieldset>
</form>
</dtml-if>

<dtml-if expr="_.has_key('dt_apres') or _.has_key('dt_apres2')">
 <h3 >Matérias apresentadas entre <dtml-var dt_apres> e <dtml-var dt_apres2></h3>
 <br />

<dtml-in expr="autorMateriaAno(cod_autor=hdn_cod_autor,tip_materia_sel=lst_tip_materia,dat_apresentacao=dt_apres,dat_apresentacao2=dt_apres2)">

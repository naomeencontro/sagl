<!DOCTYPE html>
<dtml-call "RESPONSE.setHeader('Content-Type','text/html; charset=utf-8')">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Pesquisar Parlamentares</title>
  <dtml-var standard_css_slot>
  <script type='text/javascript' src='&dtml-portal_url;/javascript/geral.js'></script>

<script type="text/javascript" >
 <!--  
    function campos_criticar(form) {

      if (form.txt_parlamentar.value == ""){
         alert("O nome do parlamentar deve ser preenchido!");
         form.txt_parlamentar.focus();
         return false;        
     }    
     return true;
    }  

 //-->
</script>
</head>

<body class="fadeIn popup">

<h1 class="firstHeading">Pesquisar por Parlamentares</h1> 

<form class="form-inline" name="parlamentar_pesquisar_form" action="parlamentar_pesquisar_form" onsubmit="return false;">
   <div class="form-group">
    <div class="input-group">
         <input class="form-control" type="text" name="txt_parlamentar" value="<dtml-var txt_parlamentar missing>" placeholder="Nome ou apelido do parlamentar">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button" onclick="javascript:if(campos_criticar(document.parlamentar_pesquisar_form)) {document.parlamentar_pesquisar_form.submit()}">Buscar</button>
      </span>
    </div>
  </div>
   <dtml-if expr="REQUEST.has_key('txt_parlamentar')">
   <div class="form-group">
     <label for="lst_autor">Selecione o parlamentar</label>
       <select class="form-control" name="lst_parlamentar" size="10">
       <dtml-in expr="zsql.parlamentar_obter_zsql(nom_parlamentar_match=txt_parlamentar)">
         <option value="parlamentar_mostrar_proc?cod_parlamentar=<dtml-var cod_parlamentar>"><dtml-var nom_completo></option>
       </dtml-in>
       </select>
    </div>
       <input class="btn btn-default" type="button" name="btn_OK" value=" OK " onClick="parent.location.href = this.form.lst_parlamentar.options[this.form.lst_parlamentar.selectedIndex].value; return false;">
       <input class="btn btn-default" type="button" name="btn_fechar" value="Fechar" OnClick="javascript:parent.jQuery.fancybox.close();" />
   </dtml-if>
</form>
</body>
</html>
